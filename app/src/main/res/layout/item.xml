<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:padding="16dp"
        android:layout_margin="10dp"
        android:background="@drawable/bottom_shade"
        android:foreground="?attr/selectableItemBackgroundBorderless"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serial Number  : "
                android:textColor="#000000"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/tvid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   id"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name :  "
                android:textColor="#000000"
                android:layout_marginBottom="4dp"
                />
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Word Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gmail ID :  "
                android:textColor="#000000"

                android:textStyle="italic"
                android:layout_marginBottom="4dp"

                />
            <TextView
                android:id="@+id/tvGmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.@gmail.com"
                android:textStyle="italic"
                android:layout_marginBottom="4dp"
                android:textColor="#0097A7"
                />

        </LinearLayout>





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="#000000"
                android:text="PassWord : " />

            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="passwod Here"
                android:textColor="#7B1FA2"
                />



        </LinearLayout>







        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile : "
                android:textColor="#000000"

                android:layout_marginBottom="4dp"
                />

            <TextView
                android:id="@+id/tvMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0123232444"
                android:layout_marginBottom="4dp"
                android:textColor="#3F51B5"
                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semester : "
                android:textColor="#000000"

                android:layout_marginBottom="4dp"
                />

            <TextView
                android:id="@+id/tvSemester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="year name"
                android:layout_marginBottom="6dp"
                android:textColor="#3F51B5"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tvUpdate"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Update"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#41AE46"
                />

            <Button
                android:id="@+id/tvDelete"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Delete"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#BC2929"

                />

        </LinearLayout>

    </LinearLayout>




</LinearLayout>